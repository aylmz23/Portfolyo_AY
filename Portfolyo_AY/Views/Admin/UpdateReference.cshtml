@model Portfolyo_AY.Entities.Reference
@{
    ViewData["Title"] = "Reference";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h4>Reference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateReference" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" />

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Major" class="control-label"></label>
                <input asp-for="Major" class="form-control" />
                <span asp-validation-for="Major" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Massage" class="control-label"></label>
                <input asp-for="Massage" class="form-control" />
                <span asp-validation-for="Massage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger" typeof="file"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary col-4" asp-action="Reference">Back to List</a>
</div>

